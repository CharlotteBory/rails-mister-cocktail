<h1>Cocktail master</h1>
<h2>Choose among <%= @cocktails.count %> <%= @cocktails.count == 1 ? "cocktail" : "cocktails" %></h2>
<%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
  <%= f.input :name, required: false, label: false, input_html: {value: ""} %>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>
<div class="container py-3">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card cocktail" style="min-width: 200px; max-width: 400px; height: 20rem;">
          <div class="card-img d-flex">
            <% if cocktail.photo.attached? %>
              <%= cl_image_tag cocktail.photo.key %>
            <% else %>
              <%= image_tag "cocktails/cocktail-#{(1..45).to_a.sample}.png", alt: "cocktail-illustration", class: "align-self-end" %>
            <% end %>
          </div>
          <div class="card-body">
            <%= cocktail.name %>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
