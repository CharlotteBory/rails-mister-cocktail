<h1>Cocktail master</h1>
<h2>Choose among <%= @cocktails.count %> <%= @cocktails.count == 1 ? "cocktail" : "cocktails" %></h2>
<%= link_to "Add a new cocktail", new_cocktail_path %>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card cocktail" style="min-width: 200px; max-width: 400px; height: 20rem;">
          <div class="card-img">
            <%= image_tag "cocktails/cocktail-#{(1..45).to_a.sample}.png", alt: "cocktail-illustration" %>
          </div>
          <div class="card-body">
            <%= cocktail.name %>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
