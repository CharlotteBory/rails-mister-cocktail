<h1><%= @cocktail.name %></h1>
<h2>Recipe</h2>
<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
<ul>
  <% @doses.each do |dose| %>
  <li><%= dose.description %> of <%= dose.ingredient.name %> (<%= link_to "delete", cocktail_dose_path(@cocktail, dose), method: :delete %>)</li>
  <% end %>
</ul>
