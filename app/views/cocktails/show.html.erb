<h1><%= @cocktail.name %></h1>
<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
  <%= image_tag "cocktails/cocktail-#{(1..45).to_a.sample}.png", alt: "cocktail-illustration" %>
<% end %>
<h2>Recipe</h2>
<%= link_to "Add ingredient", cocktail_path(@cocktail, anchor: "new_dose") %>
<ul>
  <% @doses.each do |dose| %>
  <li><%= dose.description %> of <%= dose.ingredient.name %> (<%= link_to "delete", cocktail_dose_path(@cocktail, dose), method: :delete %>)</li>
  <% end %>
</ul>

<%= render "doses/new" %>
